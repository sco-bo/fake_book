<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to 'Profile', current_user, class: "navbar-brand" %>
      </div>
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li class="<%= 'active' if current_page?(feed_path) %>"><%= link_to "FakeBook Feed", feed_path %></li>
          <li class="<%= 'active' if current_page?(users_path) %>"><%= link_to "FakeBook Friends", users_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Notifications <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <%= render 'friendships/requested_friends' %>
            </ul>
          </li>
          <li><%= link_to 'Log out', destroy_user_session_path, method: 'delete' %></li>
        <% else %>
          <li><%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook) %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Log in', new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</body>
